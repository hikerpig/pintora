{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "es6",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true
  }
}
