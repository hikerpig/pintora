{
  "name": "pintora",
  "description": "Monorepo for pintora project",
  "private": true,
  "scripts": {
    "clean": "rimraf \"packages/**/lib\"",
    "compile": "pnpx turbo run compile --concurrency=10",
    "compile:browser": "pnpx turbo run compile --concurrency=10 --ignore='@pintora/cli'",
    "watch": "pnpx turbo run watch --concurrency=10 --no-cache",
    "watch:browser": "pnpx turbo run watch --concurrency=10 --no-cache --no-deps --scope='@pintora/diagrams'",
    "demo:dev": "cd demo && npm run dev",
    "website:dev": "cd website && npm run start",
    "prettier": "prettier \"packages/*/src/**/*.{ts,js}\" \"demo/src\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "lint": "eslint packages/*/src/**/*.{ts,js}",
    "test": "pnpx jest",
    "coverage": "pnpx jest --coverage",
    "upload-coverage": "codecov -f coverage/coverage-final.json",
    "ci:coverage": "pnpx jest --coverage --ci",
    "build-site": "sh ./scripts/build-site.sh",
    "vercel-build": "npm run compile:browser && npm run build-site"
  },
  "workspaces": [
    "./packages/*",
    "./website",
    "./demo"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@6.27.1",
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.9",
    "@changesets/cli": "^2.20.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "codecov": "^3.8.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.8.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "turbo": "^1.2.0",
    "typescript": "^4.6.3"
  }
}
